<%- layout("/layouts/boilerplate") %>

<body>
    <div class="row mt-3 offset-1">
        <h3 style="color: red;">Edit Your Listing</h3>
        <form method="post" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title"><b>Title</b></label>
                <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" id="title" required>
                <div class="invalid-feedback">Please enter valid title</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description"><b>Description</b></label>
                <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                <div class="invalid-feedback">Please enter valid description</div>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="image"><b>Upload new Image</b></label>
                <input type="file" name="listing[image]" class="form-control" id="image">
            </div>
            <div class="row mb-3">
                <div class="col-4">
                    <label class="form-label" for="price"><b>Price</b></label>
                    <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" id="price" required>
                    <div class="invalid-feedback">Please enter valid price</div>
                </div>

                <div class="col-8 mb-3">
                    <label class="form-label" for="country"><b>Country</b></label>
                    <input type="text" name="listing[country]" value="<%= listing.location %>" class="form-control" id="country" required>
                    <div class="invalid-feedback">Please enter valid country</div>
                </div>
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="location"><b>Location</b></label>
                <input type="text" name="listing[location]" value="<%= listing.country %>" class="form-control" id="location" required>
                <div class="invalid-feedback">Please enter valid location</div>
            </div>
            <button class=" btn btn-dark mt-2">Submit</button>
        </form>
    </div>
    
</body>