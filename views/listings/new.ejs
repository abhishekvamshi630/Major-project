<%- layout("/layouts/boilerplate") %>

<body>
    <h3>Create a new Listing</h3>
    <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <div>
            <label class="form-label" for="title">Title</label>
            <input type="text" name="listing[title]" placeholder="enter your title" class="form-control" id="title" required>
            <div class="invalid-feedback">Please enter valid title</div>
        </div>
        <div>
            <label class="form-label" for="description">Description</label>
            <input type="text" name="listing[description]" placeholder="enter your description" class="form-control" id="description" required>
            <div class="invalid-feedback">Please enter valid description</div>
        </div>
        <div>
            <label class="form-label" for="image">Upload Image</label>
            <input type="file" name="listing[image]"  class="form-control" id="image" required>
        </div>
        <div class="row">
            <div class="col-4">
                <label class="form-label" for="price">Price</label>
                <input name="listing[price]" placeholder="enter your price" class="form-control" id="price" required>
                <div class="invalid-feedback">Please enter valid price</div>
            </div>

            <div class="col-8">
                <label class="form-label" for="country">Country</label>
                <input type="text" name="listing[country]" placeholder="enter your country" class="form-control" id="country" required>
                <div class="invalid-feedback">Please enter valid country</div>
            </div>
        </div>
        
        <div>
            <label class="form-label" for="location">Location</label>
            <input type="text" name="listing[location]" placeholder="enter your location" class="form-control" id="location" required>
            <div class="invalid-feedback">Please enter valid location</div>
        </div><br>

        <button class="btn btn-dark add-btn-colr">Add List</button>
    </form>
</body>